{
  "compilerOptions": {
    "declaration": true,
    "target": "es5",                          
    "module": "commonjs",                    
    "lib": ["es6"],                     
    "allowJs": true,
    "outDir": "dist",                          
    "rootDirs": ["lib"],
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "tests/**/*.test.ts",
    "dist"
  ],
  "include": [
    "lib/**/*"
  ]
}
