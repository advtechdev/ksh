{
  "compilerOptions": {
    "declaration": true,
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "ES2021"
    ],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "./lib",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictNullChecks": true
  },
  "exclude": [
    "node_modules",
    "tests/**/*.test.ts",
    "dist",
    "examples"
  ],
  "include": [
    "lib/**/*"
  ]
}